{
  "protocols": {
    "primary_confirmation": {
      "description": "一次情報源による確認プロトコル",
      "required_sources": ["政府文書", "SEC提出書類", "公式プレスリリース"],
      "verification_steps": [
        "公式ウェブサイトで発表を確認",
        "SEC EDGARで関連提出書類を検索",
        "SAM.govで契約情報を確認"
      ],
      "confidence_boost": 15
    },
    "multi_source_confirmation": {
      "description": "複数情報源による確認プロトコル",
      "required_count": 2,
      "acceptable_combinations": [
        ["通信社", "業界メディア"],
        ["業界メディア", "業界メディア"],
        ["シンクタンク", "通信社"]
      ],
      "confidence_boost": 10
    },
    "conflict_resolution": {
      "description": "情報矛盾の解決プロトコル",
      "steps": [
        "全情報源の日付を確認（最新を優先）",
        "一次情報源の有無を確認（あれば優先）",
        "情報の具体性を比較（詳細な方を優先）",
        "解決不能な場合はconflictingとしてマーク"
      ],
      "confidence_penalty": -50
    },
    "staleness_check": {
      "description": "情報の陳腐化チェックプロトコル",
      "thresholds": {
        "market_share": 180,
        "policy": "execution_deadline",
        "guidance": "next_earnings",
        "market_state": 1
      },
      "action": "stale_alertを発行し、更新を要求"
    }
  },
  "source_reliability": {
    "tier_a": {
      "description": "最高信頼性（単独使用可）",
      "sources": ["政府文書", "SEC提出書類", "契約データベース"],
      "examples": ["Federal Register", "10-K/10-Q", "SAM.gov", "FPDS"]
    },
    "tier_b_plus": {
      "description": "高信頼性（複数推奨）",
      "sources": ["業界専門メディア"],
      "examples": ["Defense News", "SpaceNews", "Utility Dive", "The Information"]
    },
    "tier_b": {
      "description": "信頼性あり（複数必須）",
      "sources": ["通信社", "シンクタンク"],
      "examples": ["Reuters", "Bloomberg", "CSIS", "RAND"]
    },
    "tier_c": {
      "description": "単独使用禁止",
      "sources": ["ソーシャルメディア", "フォーラム", "個人ブログ", "アナリスト予想"],
      "note": "センチメント分析にのみ使用可"
    }
  },
  "automation_rules": {
    "auto_upgrade": {
      "trigger": "primary_source_found",
      "action": "verification_levelをprimary_confirmedに変更",
      "certainty_adjustment": "+15"
    },
    "auto_downgrade": {
      "trigger": "single_unverified_after_7_days",
      "action": "certainty.scoreを10%減少"
    },
    "auto_flag": {
      "trigger": "conflict_detected",
      "action": "verification_levelをconflictingに変更、アラート発行"
    }
  }
}
